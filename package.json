{
    "name": "a11y-auto-contrast",
    "version": "1.0.0",
    "description": "A set of tools which takes a background color value and returns a text-color that would pass a11y accessibility checks",
    "main": "src/index.js",
    "type": "module",
    "scripts": {
        "lint": "eslint src",
        "prettier:check": "prettier --check .",
        "prettier:fix": "prettier --write .",
        "test": "jest",
        "ts:check": "tsc",
        "verify": "npm run lint && npm run prettier:check && npm run ts:check"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Raymond-Cox/a11y-auto-contrast.git"
    },
    "keywords": [
        "a11y"
    ],
    "author": "Raymond-Cox",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/Raymond-Cox/a11y-auto-contrast/issues"
    },
    "homepage": "https://github.com/Raymond-Cox/a11y-auto-contrast#readme",
    "devDependencies": {
        "@babel/core": "^7.25.2",
        "@babel/preset-env": "^7.25.3",
        "@eslint/js": "^9.9.0",
        "@types/jest": "^29.5.12",
        "babel-jest": "^29.7.0",
        "eslint": "^9.9.0",
        "eslint-plugin-jest": "^28.8.0",
        "globals": "^15.9.0",
        "jest": "^29.7.0",
        "prettier": "^3.3.3",
        "typescript": "^5.5.4"
    }
